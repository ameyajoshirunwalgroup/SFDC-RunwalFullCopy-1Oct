<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Total_Attendees_When_Attended</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    Is_Attended__c = TRUE,
    ISBLANK(Total_Attendees__c)
)</errorConditionFormula>
    <errorMessage>Please enter Total Attendees.</errorMessage>
</ValidationRule>
