<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Remark_Required</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
 ISPICKVAL(Sub_Reason__c, &apos;Others&apos;) ,
 ISBLANK(Remarks__c)
)</errorConditionFormula>
    <errorDisplayField>Remarks__c</errorDisplayField>
    <errorMessage>Please specify other reason in remarks.</errorMessage>
</ValidationRule>
