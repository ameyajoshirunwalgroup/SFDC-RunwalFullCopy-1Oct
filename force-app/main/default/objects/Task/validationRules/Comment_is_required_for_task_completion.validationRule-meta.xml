<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Comment_is_required_for_task_completion</fullName>
    <active>true</active>
    <description>Comment_is_required_for_task_completion</description>
    <errorConditionFormula>AND( NOT(ISBLANK(CP_Meeting_Address__c)),ISPICKVAL( Status , &apos;Completed&apos;),  ISBLANK( Description ) )</errorConditionFormula>
    <errorDisplayField>Description</errorDisplayField>
    <errorMessage>Comment is Mandatory</errorMessage>
</ValidationRule>
