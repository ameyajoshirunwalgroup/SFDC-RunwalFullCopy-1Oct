<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>mandatory_customer_reference</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    NOT(ISNEW()),
    ISPICKVAL(LeadSource, &apos;Loyalty&apos;),
    ISBLANK(Customer_Reference__c)

)</errorConditionFormula>
    <errorMessage>Please update the customer reference field</errorMessage>
</ValidationRule>
